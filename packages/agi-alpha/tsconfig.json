{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
    "moduleResolution": "Node",
    "outDir": "./dist",
    "noErrorTruncation": true
  },
  "exclude": ["node_modules"],
  "include": ["**/*.ts", "./env.d.ts"],
  "files": ["./src/index.ts"],
  "ts-node": {
    "experimentalSpecifierResolution": "node"
  }
}
